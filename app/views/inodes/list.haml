%html
  %style
    * { font-family: "Helvetica"; }
    body { background-color:#C7CBD4 }
    a { color: #08C; text-decoration: none }
    h1 { color: #333 }
    h3 { font-size: 16px; color: #333 }
    \.content { width: 25%; margin: 20px auto; padding: 10px 30px 10px 30px; background-color: white; border-radius: 10px; -webkit-box-shadow: 0 0 1px 1px #8D95A8; }
  %body
    %div.content
      %center
        %img(src="http://cloudresourcemeter.com/images/CloudResMeter_iconTransp-Lg.png" style="width:100px")
        %h1 Cloud Resource Meter
        - @inodes.each do |i|
          %h3
            %a(href="inodes/#{i.uuid}" content-type="text/html") #{i.host_ip_address}